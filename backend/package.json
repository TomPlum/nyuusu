{
  "name": "nyuusu-backend",
  "description": "A simple backend for the nyusu website. Proxies API requests to be able to hide secrets and avoid CORS issues.",
  "main": "index.ts",
  "type": "commonjs",
  "engines": {
    "node": "20.x"
  },
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm ./index.ts",
    "test": "PORT=0 jest --forceExit",
    "test:ci": "PORT=0 jest --ci --forceExit",
    "serve": "tsc | node dist/index.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.7.0",
    "msw": "^2.0.10",
    "superagent": "^10.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2"
  }
}
